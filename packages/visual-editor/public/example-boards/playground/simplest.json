{
  "title": "The simplest LLM-based board",
  "description": "This board is as simple as it gets: takes text as input and invokes Gemini to generate a text response as output.",
  "version": "0.1.0",
  "edges": [
    {
      "from": "gemini",
      "to": "output-0",
      "out": "text",
      "in": "response"
    },
    {
      "from": "input-0",
      "to": "gemini",
      "out": "generator",
      "in": "$board"
    },
    {
      "from": "input-0",
      "to": "gemini",
      "out": "prompt",
      "in": "text"
    }
  ],
  "nodes": [
    {
      "id": "input-0",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "generator": {
              "type": "object",
              "behavior": [
                "board"
              ],
              "title": "Generator",
              "description": "The URL of the generator to call",
              "default": "{\n  \"kind\": \"board\",\n  \"path\": \"gemini-generator.json\"\n}",
              "properties": {},
              "required": [],
              "additionalProperties": false
            },
            "prompt": {
              "type": "string",
              "title": "Prompt",
              "description": "The prompt to generate a completion for",
              "examples": [
                "Tell me a fun story about playing with breadboards"
              ]
            }
          },
          "required": [
            "prompt"
          ]
        }
      }
    },
    {
      "id": "output-0",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "response": {
              "type": [
                "array",
                "boolean",
                "null",
                "number",
                "object",
                "string"
              ],
              "title": "Response",
              "description": "The completion generated by the LLM"
            }
          },
          "required": [
            "response"
          ]
        }
      }
    },
    {
      "id": "gemini",
      "type": "invoke",
      "configuration": {}
    }
  ]
}